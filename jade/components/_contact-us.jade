section.section.contact-us#contact
  -var sectiontitle = 'Contact us'
  include ../globals/_section-title.jade
  .container
    .row.text-center
      form(method="post" action="mail.php")
        .col-md-3.form-outer.col-sm-9.col-xs-12
          .form-group
            input(type="text" placeholder="Name" name="name" required)
            span.icon: i.icon-user
        .col-md-3.form-outer.col-sm-9.col-xs-12
          .form-group
            input(type="text" placeholder="Mobile Number" name="number" required)
            span.icon: i.icon-phone
        .col-md-3.form-outer.col-sm-9.col-xs-12
          .form-group
            input(type="email" placeholder="E-mail" name="email" required)
            span.icon: i.icon-envelope
        .col-md-9.col-sm-9.col-xs-12.form-outer.message
          textarea(placeholder="Message" name="message" required)
          input.button.button.btn-primary.submit(type="submit" id="submit") 
          

    